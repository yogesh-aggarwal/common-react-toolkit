{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ES6",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"baseUrl": ".",
		"paths": {
			"common-react-toolkit/*": ["lib/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
